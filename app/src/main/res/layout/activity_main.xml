<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtf"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text=" "
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="84dp"
        android:layout_height="67dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="bt1Clicked"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtf" />

    <Button
        android:id="@+id/button4"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="b4Clicked"
        android:text="4"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/button7"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="bt7Clicked"
        android:text="7"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:onClick="bt2Clicked"
        android:text="2"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/txtf" />

    <Button
        android:id="@+id/button5"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:onClick="b5Clicked"
        android:text="5"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <Button
        android:id="@+id/button8"
        android:layout_width="84dp"
        android:layout_height="67dp"

        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:onClick="bt8Clicked"
        android:text="8"

        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="84dp"
        android:layout_height="67dp"


        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:onClick="bt3Clicked"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@id/txtf" />

    <Button
        android:id="@+id/button6"
        android:layout_width="84dp"
        android:layout_height="67dp"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:onClick="bt6Clicked"

        android:text="6"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button9"
        android:layout_width="84dp"
        android:layout_height="67dp"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:onClick="bt9Clicked"

        android:text="9"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@id/button6" />

    <Button
        android:id="@+id/button0"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="20dp"
        android:onClick="bt0Clicked"
        android:text="0"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:onClick="btPlusClicked"
        android:text="+"

        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:onClick="btcClicked"
        android:text="CE"

        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/buttonDivide"
        app:layout_constraintTop_toBottomOf="@id/buttonMinus" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:onClick="btDivideClicked"
        android:text="/"

        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/buttonX"
        app:layout_constraintTop_toBottomOf="@id/buttonPlus" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="84dp"
        android:layout_height="67dp"


        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:onClick="btMinusClickedClicked"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/buttonC"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="327dp"
        android:layout_height="76dp"


        android:backgroundTint="#FF9800"
        android:onClick="btEnterClicked"
        android:text="ENTER"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintLeft_toRightOf="@id/buttonX"
        app:layout_constraintRight_toRightOf="@id/buttonC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
        app:layout_constraintVertical_bias="0.099" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="20dp"
        android:onClick="btXClicked"
        android:text="*"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button0" />


</androidx.constraintlayout.widget.ConstraintLayout>